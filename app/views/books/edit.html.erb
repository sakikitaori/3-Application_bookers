<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div id="error_explanation">

  <h2>
    <% if @book.errors.count == 1 then %>
      1 error prohibited this book from being saved:
    <% else %>
      <%= @book.errors.count %>
      errors prohibited this book from being saved:
    <% end %>
  </h2>

  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

<div class="field">
  <% if @book.errors[ :title].any? %>
    <div class="field_with_errors">
      <label>Title</label>
    </div>
  <% else %>
    <label>Title</label>
  <% end %>

  <%= f.text_field :title %>

</div>

<div class="field">

  <% if @book.errors[ :body].any? %>
    <div class="field_with_errors">
      <label>Body</label>
    </div>
  <% else %>
    <label>Body</label>
  <% end %>

  <%= f.text_area :body %>

</div>

<div class="actions">
<%= f.submit 'Update Book' %>
</div>
<% end %>
<%= link_to "Show", book_path %>
